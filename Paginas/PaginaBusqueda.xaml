<Page x:Class="ClienteAminoExo.Paginas.PaginaBusqueda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteAminoExo.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaBusqueda"
      Background="{StaticResource FondoDegradado}">

    <ScrollViewer>
        <StackPanel Margin="20">

            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBox x:Name="TextBoxBusqueda" Width="300" Height="30" Margin="0,0,10,0"
                         VerticalContentAlignment="Center"/>
                <Button Content="Buscar" Width="100" Height="30" Click="ButtonBuscar_Click"/>
            </StackPanel>

            <WrapPanel x:Name="WrapPanelResultados">
                
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>