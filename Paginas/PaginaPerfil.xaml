<Page x:Class="ClienteAminoExo.Paginas.PaginaPerfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteAminoExo.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="PaginaPerfil"
      Background="{StaticResource FondoDegradado}">

    <Grid Margin="20">
        <Border Background="{StaticResource GlassGradient}" 
                CornerRadius="20" 
                Padding="20"
                BorderBrush="{StaticResource GlassBorderColor}"
                BorderThickness="1.5"
                Effect="{StaticResource VidrioSombra}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezado con imagen y usuario -->
                <Border Background="#661a1a2e" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Width="100" Height="130" RadiusX="10" RadiusY="10" Fill="Gray" Stroke="White" StrokeThickness="2"/>
                    <!-- Aquí irá la imagen en el futuro -->

                    <TextBlock Text="usuario_" FontSize="20" FontWeight="Bold"
                               Foreground="White" Margin="20,40,0,0" Grid.Column="1"/>
                </Grid>
                </Border>
                <!-- Cuerpo -->
                <StackPanel Grid.Row="1" Margin="40,20">

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nombre -->
                        <StackPanel Margin="10" Grid.Column="0">
                            <TextBlock Text="Nombre" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNombre" FontSize="14" Padding="8"
                                     Background="#22FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1"
                                     Foreground="White" />
                        </StackPanel>

                        <!-- Contraseña -->
                        <StackPanel Margin="10" Grid.Column="1">
                            <TextBlock Text="Contraseña" Foreground="White" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtPassword" FontSize="14" Padding="8"
                                         Background="#22FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1"
                                         Foreground="White" />
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Apellidos -->
                        <StackPanel Margin="10" Grid.Column="0">
                            <TextBlock Text="Apellidos" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtApellidos" FontSize="14" Padding="8"
                                     Background="#22FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1"
                                     Foreground="White" />
                        </StackPanel>

                        <!-- Correo -->
                        <StackPanel Margin="10" Grid.Column="1">
                            <TextBlock Text="Correo" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtCorreo" FontSize="14" Padding="8"
                                     Background="#22FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1"
                                     Foreground="White" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Page>
